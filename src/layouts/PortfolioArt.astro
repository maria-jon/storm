---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import BaseLayout from './BaseLayout.astro';

type Props = CollectionEntry<'portfolio'>['data'];

const { title, description, date, updatedDate, cover, coverAlt, link, additionalImg } = Astro.props;
---
<style>
    .hero-image img {
        border-radius: var(--border-radius);
    }
</style>

<BaseLayout title={title} description={description}>
    <article>
        <div class="hero-image">
            {cover && <Image width={1020} height={510} src={cover} alt={coverAlt} />}
        </div>
        <div class="prose">
            <div class="title">
                <h1>{title}</h1>
                <hr />
            </div>
            <slot />
            <div class="date">
                <FormattedDate date={date} />
                {
                    updatedDate && (
                        <div class="last-updated-on">
                            Updated <FormattedDate date={updatedDate} />
                        </div>
                    )
                }
            </div>
            <a href={link}>Link to</a>
        </div>
    </article>
</BaseLayout>
